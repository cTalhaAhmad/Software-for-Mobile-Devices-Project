<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5"
    android:orientation="vertical"
    tools:context=".MentorSide.MentorPortalActivity">

    <TextView
        android:id="@+id/txtmentor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnsetvenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:onClick="add_sub_event"
        android:layout_weight="1"
        android:text="Add Sub-Events" />

    <Button
        android:id="@+id/btnsetscore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:onClick="reg_oc"
        android:layout_weight="1"
        android:text="Register OC" />

    <Button
        android:id="@+id/btneventupdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:onClick="goto_assign_subevent"
        android:text="Assign Sub-Event" />

    <Button
        android:id="@+id/btnallregoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="show_reg_mentor"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:text="Event Registeration" />
</LinearLayout>