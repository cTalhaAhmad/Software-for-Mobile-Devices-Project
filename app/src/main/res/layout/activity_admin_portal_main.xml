<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5"
    android:background="@drawable/a12"
    android:orientation="vertical"
    tools:context=".AdminSide.AdminPortalMainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="170dp"
            android:layout_height="78dp"
            android:contentDescription="@string/todo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/a13" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnsetvenue"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:onClick="add_event"
        android:text="Add Events" />

    <Button
        android:id="@+id/btneventupdt"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:onClick="goto_assign_event"
        android:text="Assign Event" />

    <Button
        android:id="@+id/btnsetscore"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:onClick="reg_mentor"
        android:text="Register OC" />

    <Button
        android:id="@+id/btnallregoc"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:onClick="show_reg_admin"
        android:text="All Registeration" />
</LinearLayout>